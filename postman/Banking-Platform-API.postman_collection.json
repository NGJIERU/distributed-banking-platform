                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"sourceAccountId\": \"{{accountId}}\",\n  \"targetAccountId\": \"{{targetAccountId}}\",\n  \"amount\": 50.00,\n  \"description\": \"Transfer to savings\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/v1/transactions/transfer",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "v1", "transactions", "transfer"]
                }
              }
            },
            {
              "name": "Get Transaction History",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{accessToken}}"
                  }
                ],
                "url": {
                  "raw": "{{baseUrl}}/api/v1/transactions/account/{{accountId}}?page=0&size=20",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "v1", "transactions", "account", "{{accountId}}"],
                  "query": [
                    {"key": "page", "value": "0"},
                    {"key": "size", "value": "20"}
                  ]
                }
              }
            }
          ]
        },
        {
          "name": "Health",
          "item": [
            {
              "name": "Health Check",
              "request": {
                "method": "GET",
                "url": {
                  "raw": "http://localhost:8081/actuator/health",
                  "host": ["http://localhost:8081"],
                  "path": ["actuator", "health"]
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
